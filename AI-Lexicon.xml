         alphabet="ipa"
         xmlns="http://www.w3.org/2005/01/pronunciation-lexicon">

  <!-- AI -->
  <lexeme>
    <grapheme>AI</grapheme>
    <grapheme>ai</grapheme>
    <!-- pick one: alias replaces visible text, pron only changes sound -->
    <!-- <alias>éj áj</alias> -->
    <pron alphabet="ipa">ɛj aːj</pron>
  </lexeme>

  <!-- GenAI -->
  <lexeme>
    <grapheme>GenAI</grapheme>
    <grapheme>genai</grapheme>
    <!-- <alias>džen éj áj</alias> -->
    <pron alphabet="ipa">dʒɛn ɛj aːj</pron>
  </lexeme>

  <!-- LLM -->
  <lexeme>
    <grapheme>LLM</grapheme>
    <grapheme>llm</grapheme>
    <!-- <alias>el el em</alias> -->
    <pron alphabet="ipa">ɛl ɛl ɛm</pron>
  </lexeme>

</lexicon>
